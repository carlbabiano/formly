# Stage 1: Build app with full Node image
FROM node:22 AS builder

WORKDIR /app

# Install system dependencies needed by some NPM packages
RUN apt-get update && apt-get install -y python3 make g++

# Copy and install dependencies
COPY package*.json ./
RUN npm install

# Copy app code and build it
COPY . .
RUN npm run build

# Stage 2: Run production preview with Vite
FROM node:22-slim

WORKDIR /app

# Copy built app and dependencies from builder
COPY --from=builder /app /app

# Expose Vite preview port
EXPOSE 5173

# Run the built app in preview mode
CMD ["npm", "run", "preview"]