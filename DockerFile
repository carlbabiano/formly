# Use full Node.js image
FROM node:22

# Set working directory
WORKDIR /app

# Copy package files and install deps
COPY package*.json ./
RUN npm install

# Copy rest of the code
COPY . .

# Run the build step
RUN npm run build

# Expose the port your app runs on
EXPOSE 3000

# Start dev server or production build (depends on your app)
CMD ["npm", "run", "dev"]
